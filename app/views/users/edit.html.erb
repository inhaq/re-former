<% if @user.errors.any? %>
   <% @user.errors.full_messages.each do |e| %>
   <p><%= e %></p>
    <% end %>
<% end %>

<%= form_for @user do |f| %> 
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit "Save Changes" %>
  <% end %>